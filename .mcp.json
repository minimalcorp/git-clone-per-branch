{
  "mcpServers": {
    "figma": {
      "type": "sse",
      "url": "http://${MCP_FIGMA_HOSTNAME:-127.0.0.1}:3845/sse"
    },
    "serena": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--network",
        "host",
        "-v",
        ".:/workspaces/projects",
        "ghcr.io/oraios/serena:latest",
        "serena-mcp-server",
        "--transport",
        "stdio"
      ]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_PAT}",
        "X-MCP-Toolsets": "${GITHUB_TOOLSETS:-repos,issues,pull_requests,actions}"
      }
    }
  }
}

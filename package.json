{
  "name": "@minimalcorp/gcpb",
  "version": "0.3.0",
  "description": "CLI tool for cloning git repository per branch, alternative to git worktree",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/minimalcorp/git-clone-per-branch.git"
  },
  "bugs": {
    "url": "https://github.com/minimalcorp/git-clone-per-branch/issues"
  },
  "homepage": "https://github.com/minimalcorp/git-clone-per-branch#readme",
  "bin": {
    "gcpb": "./dist/bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "check": "npm run format:check && npm run lint && npm run type-check && npm run build && npm test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "git",
    "clone",
    "branch",
    "worktree",
    "cli",
    "developer-tools"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "commander": "^14.0.2",
    "cross-spawn": "^7.0.6",
    "fs-extra": "^11.2.0",
    "git-url-parse": "^15.0.0",
    "inquirer": "^12.4.0",
    "ora": "^8.1.1",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cross-spawn": "^6.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/git-url-parse": "^9.0.3",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  }
}
